<!DOCTYPE html>
<html>
<head>
    <title>Admin - Manage Farmers</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #D7EBEB;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            background-color: #1d3278;
            color: white;
            padding: 20px 0;
            margin: 0 0 20px;
            font-size: 28px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 15px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background-color: #1d3278;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .action-btns {
            display: flex;
            gap: 10px;
        }

        .edit-btn, .delete-btn {
            padding: 10px 20px;
            font-size: 14px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        .edit-btn {
            background-color: #2196F3;
            color: white;
        }

        .delete-btn {
            background-color: #f44336;
            color: white;
        }

        .add-farmer-form {
            margin-top: 30px;
            padding: 20px;
            background-color: #f1f1f1;
            border-radius: 8px;
        }

        .add-farmer-form h2 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        .add-farmer-form input[type="text"],
        .add-farmer-form input[type="date"],
        .add-farmer-form input[type="password"],
        .add-farmer-form input[type="number"] {
            width: calc(50% - 20px);
            margin: 10px 10px 20px 0;
            padding: 12px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 16px;
            display: inline-block;
        }

        .add-farmer-form button {
            padding: 12px 30px;
            background-color: #1d3278;
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .add-farmer-form button:hover {
            background-color: #1d3278;
        }
    </style>
</head>
<body>
    <h1>Manage Farmers</h1>
    <form action="/logout" method="POST" id="logout-form">
        <button id="logout-button" type="submit">Logout</button>
    </form>
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Address</th>
                    <th>Farm Location</th>
                    <th>Joining Date</th>
                    <th>Status</th>
                    <th>Bank Details</th>
                    <th>Pincode</th>
                    <th>Aadhar Number</th>
                    <th>Photo</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% farmers.forEach(farmer => { %>
                    <tr>
                        <td><%= farmer.id %></td>
                        <td><%= farmer.name %></td>
                        <td><%= farmer.phone_number %></td>
                        <td><%= farmer.address %></td>
                        <td><%= farmer.farm_location %></td>
                        <td><%= farmer.joiningdata %></td>
                        <td><%= farmer.status ? 'Active' : 'Inactive' %></td>
                        <td><%= farmer.bank_details %></td>
                        <td><%= farmer.pincode %></td>
                        <td><%= farmer.aadhar_number %></td>
                        <td><img src="<%= farmer.photo %>" alt="Photo" width="50" height="50" style="border-radius: 50%;"></td>
                        <td class="action-btns">
                            <button class="edit-btn">Edit</button>
                            <button class="delete-btn">Delete</button>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <form action="/admin/add-farmer" method="POST" class="add-farmer-form">
            <h2>Add New Farmer</h2>
            <input type="text" name="name" placeholder="Name" required>
            <input type="text" name="phone_number" placeholder="Phone Number" required>
            <input type="text" name="address" placeholder="Address" required>
            <input type="text" name="farm_location" placeholder="Farm Location" required>
            <input type="date" name="joiningdata" placeholder="Joining Date" required>
            <input type="text" name="bank_details" placeholder="Bank Details" required>
            <input type="password" name="password" placeholder="Password" required>
            <input type="number" name="pincode" placeholder="Pincode" required>
            <input type="text" name="aadhar_number" placeholder="Aadhar Number" required>
            <input type="text" name="photo" placeholder="Photo URL" required>
            <button type="submit">Add Farmer</button>
        </form>
    </div>
</body>
</html>
